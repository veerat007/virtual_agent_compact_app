#JSGF V1.0 UTF8 th;

grammar yesno_th;

public <yesno_th> = (<main> | <noise>);

<main> = ( <yes> {Yes}
       	 | <no>  {No}
         );

<yes> = ( <affirmative> [ <k> ]
        | <k>
        );

<no> = ( ไม่ [ <affirmative> ] [ <k> ] );

<affirmative> = ( ใช่
                | ถูก
                | ถูก ต้อง
                );

<k> = ( ค่ะ
      | ครับ
      | จ้ะ
      );

<noise> = ( <NULL>
          | <GARBAGE>+
          );

